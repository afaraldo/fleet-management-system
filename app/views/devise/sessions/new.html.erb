<div class="col-lg-3 mx-lg-auto" xmlns="http://www.w3.org/1999/html">
  <div class="card shadow">
    <div class="card-header">
      <div class="app-brand justify-content-center">
        <a href="<%= root_path %>>" class="app-brand-link">
          <span class="app-brand-logo demo">
            <%= image_tag SystemSettings[:logo_file], size: "250x250" %></svg>
          </span>
        </a>
      </div>
      <h3 class="card-title text-center">Iniciar Sesión</h3>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <form id="formAuthentication" class="mb-3" action="index.html" method="POST">
          <div class='mb-3'>
            <%= f.label :email %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control",placeholder: "Ingrese su correo"%>
        </div>
        <div class="mb-3 form-password-toggle">
          <div class="d-flex justify-content-between">
            <%= f.label :password %><br />
            <a href="auth-forgot-password-basic.html">
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Olvidaste tu contraseña?", new_password_path(resource_name) %><br />
              <% end %>
            </a>
          </div>
          <div class="input-group input-group-merge">
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control",placeholder: "············"%>
            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
          </div>
        </div>
          <!--        <div class="mb-3">-->
          <!--          <div class="form-check">-->
          <!--            <input class="form-check-input" type="checkbox" id="remember-me">-->
          <!--            <label class="form-check-label" for="remember-me">-->
          <!--              Recuerdame-->
          <!--            </label>-->
          <!--          </div>-->
          <!--        </div>-->
          <div class='mb-3'>
            <%= f.submit "Iniciar Sesión" , class:"btn btn-primary d-grid w-100" %>
        </div>
        </form>
      <% end %>
    </div>
  </div>
</div>