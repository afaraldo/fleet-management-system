<div class="col-lg-4 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header">
      <h2 class="card-title text-center">Registrarse</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
        <div class="mb-3">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control", placeholder: "Ingrese su correo"%>
        </div>

            <%# if @minimum_password_length %>
<!--            <em>(<%#= @minimum_password_length %> mínimo de caracteres)</em>-->
<!--            <%# end %><br />-->
        <div class="mb-3 form-password-toggle">
          <%= f.label :password %>
          <div class="input-group input-group-merge">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control",'aria-describedby':"password",placeholder: "············"%>
            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
          </div>
        </div>
        <div class="mb-3 form-password-toggle">
          <%= f.label :password_confirmation %><br />
          <div class="input-group input-group-merge">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control",placeholder: "············"%>
            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
          </div>
        </div>
        <div class='mt-3'>
          <%= f.submit "Registrate" , class:"btn btn-primary d-grid w-100" %>
        </div>
        <% end %>
      <p class="text-center">
        <div class='mt-3'>
          <span>Ya tienes una cuenta?</span>
          <%= render "devise/shared/links" %>
        </div>
      </p>

    </div>
  </div>
</div>
