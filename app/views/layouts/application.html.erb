<!DOCTYPE html >
<html id="html-document" lang="en">
  <head>
    <title>
      <%= SystemSettings[:site_name] %>
    </title>
    <%= favicon_link_tag asset_path(SystemSettings[:favicon]) %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", type: "module", "data-turbo-track": "reload", defer: true %>

    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
  </head>
  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->
        <%= render(partial: 'layouts/sidebar') %>
        <!-- / Menu -->
    
        <!-- Layout container -->
        <div class="layout-page">
          <div id="flash">
            <% flash.each do |role, message| %>
              <%= render(partial: 'shared/flash', locals: { role: role, message: message }) %>
            <% end %>
          </div>

          <nav class="layout-navbar container-xxl navbar navbar-expand-xl navbar-detached align-items-center bg-navbar-theme " id="layout-navbar">
            <div class="navbar-nav-right d-flex align-items-center" id="navbar-collapse">
              <%= render(SearchComponent.new) %>
              <!-- /Search -->
              <ul class="navbar-nav flex-row align-items-center ms-auto">
                <!-- Place this tag where you want the button to render. -->
                <li class="nav-item dropdown lh-1 me-3">
                  <a class="nav-link dropdown-toggle show" href="javascript:void(0)" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="true">
                    <i class="tf-icons bx-sm bx bxs-bell"></i>
                    <% if @current_user.notifications.unread.size.nonzero? %>
                        <span class="badge bg-primary rounded-pill">
                          <%= @current_user.notifications.unread.size %>
                        </span>
                    <% end %>
                  </a>
                  <ul class="dropdown-menu" data-bs-popper="none" aria-labelledby="navbarDropdown">
                    <% @current_user.notifications.unread.each do |notification| %>
                      <li class="col-8 text-truncate">
                        <a class="dropdown-item" href="javascript:void(0);"><%= notification.params[:message] %></a>
                      </li>
                    <% end %>
                    <li>
                      <hr class="dropdown-divider">
                    </li>
                    <li>
                      <%= link_to t('view_all_notification'), user_notifications_path(@current_user), class: "dropdown-item" %>
                    </li>
                  </ul>
                </li>

                <!-- User -->
                <li class="nav-item navbar-dropdown dropdown-user dropdown">
                  <a class="nav-link dropdown-toggle hide-arrow" href="javascript:void(0);" data-bs-toggle="dropdown">
                    <div class="avatar avatar-online">
                      <%= image_tag(@current_user.avatar.variant(resize: "100x100") || "user-avatar.svg",
                                    size: '100',
                                    alt: 'Profile image',
                                    class: 'w-px-40 h-auto rounded-circle')
                      %>
                    </div>
                  </a>
                  <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                      <a class="dropdown-item" href="#">
                        <div class="d-flex">
                          <div class="flex-shrink-0 me-3">
                            <div class="avatar avatar-online">
                              <%= image_tag(@current_user.avatar.variant(resize: "100x100") || "user-avatar.svg",
                                            size: '100',
                                            alt: 'Profile image',
                                            class: 'w-px-40 h-auto rounded-circle')
                              %>
                            </div>
                          </div>
                          <div class="flex-grow-1">
                            <span class="fw-semibold d-block"><%= @current_user.email %></span>
                            <small class="text-muted">Admin</small>
                          </div>
                        </div>
                      </a>
                    </li>
                    <li>
                      <div class="dropdown-divider"></div>
                    </li>
                    <li>
                      <a class="dropdown-item" href="<%= edit_user_path(@current_user) %>">
                        <i class="bx bx-user me-2"></i>
                        <span class="align-middle"><%= t('profile') %></span>
                      </a>
                    </li>
                    <li>
                      <div class="dropdown-divider"></div>
                    </li>
                    <li>
                      <%= link_to destroy_user_session_path, method: :delete, class: 'dropdown-item' do %>
                        <i class="bx bx-power-off me-2"></i>
                        <span class="align-middle"><%= t('logout') %></span>
                      <% end %>
                    </li>
                  </ul>
                </li>
                <!--/ User -->
                
      
              </ul>
            </div>
            <div class="layout-menu-toggle navbar-nav align-items-xl-center ml-3 d-xl-none ">
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#ok">
                <span class="navbar-toggler-icon"></span>
              </button>
            </div>
          </nav>
          
          <!-- Content wrapper -->
          <div class="content-wrapper">

            <!-- Content --> 
            <div class="container-xxl flex-grow-1 container-p-y">

            <h3 class="breadcrumbs">
              <%= render_breadcrumbs separator: ' / ' %>
            </h3>


            <!-- Layout Demo -->
            <%= yield %>
            
            <!--/ Layout Demo -->
          </div>
          <!-- / Content -->

          <!-- Footer -->
          <footer class="content-footer footer bg-footer-theme">
            <div class="container-xxl d-flex flex-wrap justify-content-between py-2 flex-md-row flex-column">
              <div class="mb-2 mb-md-0">
                Â© Desarrollado por 
                <a href="https://github.com/afaraldo" class="footer-link fw-bolder">@afaraldo</a> y
                <a href="https://github.com/KariSanabria" class="footer-link fw-bolder">KariSanabria</a>
                <%= APP_VERSION.to_s %>
              </div>
            </div>
          </footer>
          <!-- / Footer -->
        <div class="content-backdrop fade"></div>
      </div>
        <!-- Content wrapper -->
      </div>
      <!-- / Layout page -->
    </div>

    <!-- Overlay -->
    <!--<div class="layout-overlay layout-menu-toggle"></div>-->
  </div>
  <!-- / Layout wrapper -->
  </body>
</html>
