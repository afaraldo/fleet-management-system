<%= search_form_for @q do |f| %>
  <div class="row align-items-start p-3">
    <div class="col">
      <div class='form-floating'>
        <%= f.search_field :date_gteq, class:'form-control', 'aria-describedby':"floatingInputHelp" %>
        <%= f.label :date, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <div class='form-floating'>
        <%= f.search_field :car_id, class:'form-control col-auto', 'aria-describedby':"floatingInputHelp" %>
        <%= f.label :car, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <div class='form-floating'>
        <%= f.search_field :mechanical_workshop_id, class:'form-control col-auto', 'aria-describedby':"floatingInputHelp" %>
        <%= f.label :mechanical_workshop, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <div class='form-floating'>
        <%= f.search_field :budget, class:'form-control col-auto', 'aria-describedby':"floatingInputHelp" %>
        <%= f.label :budget, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <div class='form-floating'>
        <%= f.search_field :description, class:'form-control col-auto', 'aria-describedby':"floatingInputHelp" %>
        <%= f.label :description, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <%= f.button content_tag(:i, nil, class:'bx bx-search-alt'), class:'btn btn btn-secondary'  %>
    </div>
  </div>
<% end %>
<div class="card">
  <h5 class="card-header">
    <%= t('activerecord.models.maintenance.other') %>
    <%= link_to t('buttons.new'), new_maintenance_path, class: 'btn btn-primary' %>
  </h5>
  <div class="table-responsive text-nowrap">
    <table class="table">
      <caption class="ms-4">

        <div class="d-flex align-items-center justify-content-between">
          <div class="mr-auto">
            <%= page_entries_info @maintenances, entry_name: 'item' %>
          </div>
          <%= paginate @maintenances, remote: true %>
        </div>
      </caption>
      <thead>
      <tr>
        <%= search_form_for @q do |f| %>
          <th>
            <%= sort_link(@q, :date, t('activerecord.attributes.work_order.date'), default_order: :desc) %>
          </th>
          <th><%= t('activerecord.attributes.maintenance.car')%></th>
          <th><%= t('activerecord.attributes.maintenance.taller_mecanico')%></th>
          <th><%= t('activerecord.attributes.maintenance.presupuesto')%></th>
          <th><%= t('activerecord.attributes.maintenance.descripcion')%></th>
          <th class="d-print-none"></th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      <% @maintenances.each do |maintenance| %>
        <tr>
          <td><strong><%= maintenance.date %></strong></td>
          <td><%= maintenance.car %></td>
          <td><%= maintenance.mechanical_workshop %></td>
          <td><%= maintenance.budget %></td>
          <td><%= maintenance.description %></td>
          <td class="d-print-none">
          <td class="d-print-none">
            <%= render(partial: 'components/action_buttons', locals: { model: maintenance })%>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>