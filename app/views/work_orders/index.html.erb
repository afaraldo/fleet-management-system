<%= search_form_for @q do |f| %>
  <div class="row align-items-start p-3">
    <div class="col">
      <div class='form-floating'>
        <%= f.search_field :date_lteq, class:'form-control', 'aria-describedby':"floatingInputHelp" %>
        <%= f.label :make, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <div class='form-floating'>
        <%= f.search_field :date_gteq, class:'form-control col-auto', 'aria-describedby':"floatingInputHelp" %>
        <%= f.label :model, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <%= f.button content_tag(:i, nil, class:'bx bx-search-alt'), class:'btn btn-primary'  %>
    </div>
  </div>
<% end %>

<div class="card">
  <h5 class="card-header">
    <%= t('activerecord.models.work_order.other') %>
    <%= link_to t('buttons.new'), new_work_order_path, class: 'btn btn-primary' %>
  </h5>

  <div class="table-responsive text-nowrap">
    <table class="table">
      <caption class="ms-4">

        <div class="d-flex align-items-center justify-content-between">
          <div class="mr-auto">
            <%= page_entries_info @work_orders, entry_name: 'item' %>
          </div>
          <%= paginate @work_orders, remote: true %>
        </div>
      </caption>
      <thead>
      <tr>
        <%= search_form_for @q do |f| %>
          <th>
            <%= sort_link(@q, :date, t('activerecord.attributes.work_order.date'), default_order: :desc) %>
          </th>
          <th><%= t('activerecord.attributes.work_order.date')%></th>
          <th><%= t('.color')%></th>
          <th><%= t('.plate_number')%></th>
          <th><%= t('.chassis')%></th>
          <th><%= t('.engine')%></th>
          <th class="d-print-none"></th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      <% @work_orders.each do |work_order| %>
        <tr>
          <td><strong><%= work_order.make %></strong></td>
          <td><%= work_order.model %></td>
          <td><%= work_order.color %></td>
          <td><span class="badge bg-label-primary me-1"><%= work_order.plate_number %></span></td>
          <td><%= work_order.chassis %></td>
          <td><%= work_order.engine %></td>
          <td class="d-print-none">
            <div class="dropdown">
              <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                <i class="bx bx-dots-vertical-rounded"></i></button>
              <div class="dropdown-menu">
                <%= link_to content_tag(:i, nil, class:'bx bx-edit-alt me-1') + t('edit')   , edit_work_order_path(work_order), class:'dropdown-item' %>
                <%= link_to content_tag(:i, nil, class:'bx bx-trash me-1')    + t('destroy'), work_order_path(work_order), data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                }, class:'dropdown-item' %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
