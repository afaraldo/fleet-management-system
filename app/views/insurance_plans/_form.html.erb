<div class="card mb-4">
  <h5 class="card-header">
    <%= t('.form')%>
  </h5>
  <div class="card-body">
    <%= simple_form_for(@insurance_plan) do |f| %>
      <div class='row mb-3'>
        <div class='col-4'>
          <div class='form-floating'>
            <%= f.input_field :contract_date,
                              as: :string,
                              class: 'form-control',
                              data: {
                                controller: "flatpickr",
                                flatpickr_default_date: f.object.contract_date || Time.now,
                                flatpickr_enable_time: true
                              }
            %>
            <%= f.label :contract_date, for: 'floatingInput' %>
          </div>
        </div>
        <div class="col-xl-4">
          <div class='form-floating'>
            <%= f.input_field :exp_date,
                              as: :string,
                              class: 'form-control',
                              data: {
                                controller: "flatpickr",
                                flatpickr_default_date: f.object.exp_date || Time.now,
                                flatpickr_enable_time: true
                              }
            %>
            <%= f.label :contract_date, for: 'floatingInput' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class='form-floating mb-3'>
          <%= f.association :car, collection: Car.all.page(0),
                            include_blank: true,
                            placeholder: t("activerecord.models.car.one"),
                            input_html: {
                              data: {
                                controller: 'ts--select',
                                'ts--select-url-value': cars_path
                              }
                            }
          %>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-4">
          <div class='form-floating'>
            <%= f.input_field :amount, class:'form-control', 'aria-describedby':"floatingInputHelp" %>
            <%= f.label :amount, for: 'floatingInput' %>
          </div>
        </div>
      </div>

      <!--<div class="form-inputs">
        <%#= f.input :contract_date %>
        <%#= f.association :car %>
        <%#= f.input :amount %>
        <%#= f.input :exp_date %>
      </div>-->

      <div class='mb-3'>
        <%= f.button 'submit', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
