<%= simple_search_form_for ransack do |f| %>
  <div class="row align-items-start p-3">
    <div class="col">
      <div class='form-floating'>
        <%= f.input_field :name,
                          class:'form-control',
                          'aria-describedby':"floatingInputHelp",
                          name: 'q[name_start]',
                          value: ransack.name_start
        %>
        <%= f.label :name, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <div class='form-floating'>
        <%= f.input_field :last_name,
                           class:'form-control col-auto',
                           'aria-describedby':"floatingInputHelp",
                           name: 'q[last_name_start]',
                           value: ransack.last_name_start
        %>
        <%= f.label :last_name, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <div class='form-floating'>
        <%= f.input_field :document,
                          class:'form-control',
                          'aria-describedby':"floatingInputHelp",
                          name: 'q[document_start]',
                          value: ransack.document_start
        %>
        <%= f.label :document, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <div class='form-floating'>
        <%= f.input_field :address,
                          class:'form-control',
                          'aria-describedby':"floatingInputHelp",
                          name: 'q[address_start]',
                          value: ransack.address_start
        %>
        <%= f.label :address, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <div class='form-floating'>
        <%= f.input_field :phone,
                          class:'form-control',
                          'aria-describedby':"floatingInputHelp",
                          name: 'q[phone_start]',
                          value: ransack.phone_start
        %>
        <%= f.label :phone, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <div class='form-floating'>
        <%= f.input_field :position,
                          class:'form-control',
                          'aria-describedby':"floatingInputHelp",
                          name: 'q[position_start]',
                          value: ransack.position_start
        %>
        <%= f.label :position, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <%= f.button :submit, t('buttons.search'), class:'btn btn btn-secondary' %>
    </div>
  </div>
<% end %>
