<%= simple_search_form_for ransack do |f| %>
  <div class="row align-items-start p-3">
    <div class="col">
      <div class='form-floating'>
        <%= f.input_field :name,
                          class:'form-control',
                          'aria-describedby':"floatingInputHelp",
                          name: 'q[name_start]',
                          value: ransack.name_start
        %>
        <%= f.label :name, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <div class='form-floating'>
        <%= f.input_field :ruc,
                          class:'form-control col-auto',
                          'aria-describedby':"floatingInputHelp",
                          name: 'q[ruc_start]',
                          value: ransack.ruc_start
        %>
        <%= f.label :ruc, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <div class='form-floating'>
        <%= f.input_field :type,
                          as: :select, collection:[%w[InsuranceCarrier Aseguradora],
                                                   %w[MechanicalWorkshop Taller]],
                          label_method: :second,
                          value_method: :first,
                          class:'form-control',
                          'aria-describedby':"floatingInputHelp",
                          name: 'q[type_eq]',
                          selected: ransack.type_eq,
                          include_blank: true
        %>
        <%= f.label :type, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <%= f.button :submit, t('buttons.search'), class:'btn btn btn-secondary' %>
    </div>
  </div>
<% end %>