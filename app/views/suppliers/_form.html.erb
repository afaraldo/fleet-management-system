<div class="card mb-4">
  <h5 class="card-header">
    <%= t('form')%>
  </h5>
  <div class="card-body">
    <%= simple_form_for supplier.becomes(Supplier), class: 'form-floating' do |f| %>
      <div class='row'>
        <div class="col-xl-4 mb-3">
          <div class='form-floating'>
            <%= f.input_field :name, class:'form-control', 'aria-describedby':"floatingInputHelp", autofocus: true %>
            <%= f.label :name, for: 'floatingInput' %>
          </div>
        </div>
        <div class="col-xl-4 mb-3">
          <div class='form-floating'>
            <%= f.input_field :ruc, class:'form-control', 'aria-describedby':"floatingInputHelp" %>
            <%= f.label :ruc, for: 'floatingInput' %>
          </div>
        </div>
        <div class="col-xl-4 mb-3">
          <div class='form-floating'>
            <%= f.input_field :type, as: :select, collection:[['InsuranceCarrier', 'Aseguradora'], ['MechanicalWorkshop', 'Taller MecÃ¡nico']], label_method: :second, value_method: :first, class:'form-control', 'aria-describedby':"floatingInputHelp"%>
            <%= f.label :type, for: 'floatingInput' %>
          </div>
        </div>
      </div>
      <div class='col-xl-2 d-grid gap-2'>
        <%= f.button 'submit', class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>
