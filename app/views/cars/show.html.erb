<div class="row mb-3">
  <div class="col-md">
    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <img class="card-img card-img-left p-4" src="<%= @car.image.url %>" alt="Card image">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h3 class="card-title">
              CARACTERÍSTICAS
            </h3>
            <div class="row">
              <div class="col-sm">
                <ul class="list-group list-group-flush">
                  <li class="list-group-item d-flex align-items-center">
                    <div class="d-flex w-100 justify-content-between">
                      <strong class="fs-5 d-flex"><i class="bx bx-sm me-2 bx-barcode me-2"></i>Chasis:</strong>
                      <span><%= @car.chassis.present? ? @car.chassis : '-' %></span>
                    </div>
                  </li>
                  <li class="list-group-item d-flex align-items-center">
                    <div class="d-flex w-100 justify-content-between">
                      <strong class="fs-5 d-flex"><i class="bx bx-sm bx-car me-2 bx-cab"></i>Tipo:</strong>
                      <span><%= @car.type_car.present? ? @car.type_car : '-' %></span>
                    </div>
                  </li>
                  <li class="list-group-item d-flex align-items-center">
                    <div class="d-flex w-100 justify-content-between">
                      <strong class="fs-5 d-flex"><i class="bx bx-sm me-2 bx-registered"></i>Marca:</strong>
                      <span><%= @car.make.present? ? @car.make : '-' %></span>
                    </div>
                  </li>
                  <li class="list-group-item d-flex align-items-center">
                    <div class="d-flex w-100 justify-content-between">
                      <strong class="fs-5 d-flex"><i class="bx bx-sm me-2 bx-palette"></i>Color:</strong>
                      <span><%= @car.color.present? ? I18n.t("colors.#{@car.color}") : '-' %></span>
                    </div>
                  </li>
                  <li class="list-group-item d-flex align-items-center">
                    <div class="d-flex w-100 justify-content-between">
                      <strong class="fs-5 d-flex"><i class="bx bx-sm me-2 bx-calendar"></i>Año:</strong>
                      <span> <%= @car.year.present? ? @car.year : '-' %></span>
                    </div>
                  </li>
                  <li class="list-group-item d-flex align-items-center">
                    <div class="d-flex w-100 justify-content-between">
                      <strong class="fs-5 d-flex"><i class="bx bx-sm me-2 bx-package"></i>Modelo:</strong>
                      <span><%= @car.model.present? ? @car.model : '-' %></span>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row mb-3">
  <div class="col-md">
    <div class="card mb-3">
      <div class="d-flex align-items-center g-0">
        <div style="flex: 0 0 auto; padding: 1rem;">
          <img class="h-px-50" src="https://fleet-management-system-development.s3.us-east-2.amazonaws.com/default/comprobar.png" alt="Card image">
        </div>
        <div style="flex: 1 1 auto;">
          <div class="card-body">
            <h5 class="card-title">Protegido</h5>
            <p class="card-text">
              El seguro se encuentra al día.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md">
    <div class="card mb-3">
      <div class="d-flex align-items-center g-0">
        <div style="flex: 0 0 auto; padding: 1rem;">
          <img class="h-px-50" src="https://fleet-management-system-development.s3.us-east-2.amazonaws.com/default/comprobar.png" alt="Card image">
        </div>
        <div style="flex: 1 1 auto;">
          <div class="card-body">
            <h5 class="card-title">Mantenimiento al día</h5>
            <p class="card-text">
              El último mantenimiento fue realizado.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>


</div>
<div class="card">
  <div class="card-header">
    <ul class="nav nav-pills card-header-pills" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <a class="nav-link active" id="work-orders-tab" data-bs-toggle="tab" href="#work-orders" role="tab" aria-controls="work-orders" aria-selected="true">Ordenes de Trabajo</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link" id="insurances-tab" data-bs-toggle="tab" href="#insurances" role="tab" aria-controls="insurances" aria-selected="false">Seguros</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link" id="maintenances-tab" data-bs-toggle="tab" href="#maintenances" role="tab" aria-controls="maintenances" aria-selected="false">Mantenimientos</a>
      </li>
    </ul>
  </div>
  <div class="card-body tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="work-orders" role="tabpanel" aria-labelledby="work-orders-tab">
      <%= render(WorkOrderTableComponent.new(work_orders: @work_orders, ransack: @ransack)) %>
    </div>
    <div class="tab-pane fade" id="insurances" role="tabpanel" aria-labelledby="insurances-tab">
      <%= render(MaintenanceTableComponent.new(maintenances: @maintenances, ransack: @ransack)) %>
    </div>
    <div class="tab-pane fade" id="maintenances" role="tabpanel" aria-labelledby="maintenances-tab">
      <%= render(MaintenanceTableComponent.new(maintenances: @maintenances, ransack: @ransack)) %>
    </div>
  </div>
</div>