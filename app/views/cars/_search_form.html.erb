<%= simple_search_form_for ransack do |f| %>
  <div class="row align-items-start p-3">
    <div class="col">
      <div class='form-floating'>
        <%= f.input_field :plate_number,
                          class:'form-control',
                          'aria-describedby':"floatingInputHelp",
                          name: 'q[plate_number_start]',
                          value: ransack.plate_number_start
        %>
        <%= f.label :plate_number, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <div class='form-floating'>
        <%= f.input_field :make,
                          class:'form-control',
                          'aria-describedby':"floatingInputHelp",
                          name: 'q[make_start]',
                          value: ransack.make_start
        %>
        <%= f.label :make, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <div class='form-floating'>
        <%= f.input_field :model,
                          class:'form-control col-auto',
                          'aria-describedby':"floatingInputHelp",
                          name: 'q[model_start]',
                          value: ransack.model_start
        %>
        <%= f.label :model, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <div class='form-floating'>
        <%= f.input_field :rasp,
                           class:'form-control',
                          'aria-describedby':"floatingInputHelp",
                          name: 'q[rasp_start]',
                          value: ransack.rasp_start
        %>
        <%= f.label :rasp, for: 'floatingInput' %>
      </div>
    </div>
    <div class="col">
      <%= f.button :submit, t('buttons.search'), class:'btn btn btn-secondary' %>
    </div>
  </div>
<% end %>