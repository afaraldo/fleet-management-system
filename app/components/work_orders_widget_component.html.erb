<div class="p-4 bg-white border border-gray-2 rounded shadow-sm mb-3" data-controller="work-order-widget">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <span class="text-dark fw-bold display-6"><%= quantity %></span>
      <h3 class="text-gray-500 fs-6">Sales this week</h3>
    </div>
    <div class="d-flex align-items-center text-success">
      12.5%
      <svg class="ms-2" width="20" height="20" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M5.293 7.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L6.707 7.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
      </svg>
    </div>
  </div>
  <div id="main-chart" data-work-order-widget-target="chart" style="min-height: 435px;"></div>
  <!-- Card Footer -->
  <div class="d-flex justify-content-between align-items-center pt-3 mt-4 border-top">
    <div class="dropdown">
      <button class="btn btn-link text-gray-500 dropdown-toggle" type="button" id="weekly-sales-dropdown" data-bs-toggle="dropdown" aria-expanded="false">
        Last 7 days
      </button>
      <div class="dropdown-menu" aria-labelledby="weekly-sales-dropdown">
        <div class="dropdown-item-text">
          Sep 16, 2021 - Sep 22, 2021
        </div>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="#">Yesterday</a>
        <a class="dropdown-item" href="#">Today</a>
        <a class="dropdown-item" href="#">Last 7 days</a>
        <a class="dropdown-item" href="#">Last 30 days</a>
        <a class="dropdown-item" href="#">Last 90 days</a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="#">Custom...</a>
      </div>
    </div>
    <div>
      <a href="#" class="text-decoration-none text-primary fw-medium d-flex align-items-center">
        Sales Report
        <svg class="ms-1" width="24" height="24" fill="none" stroke="currentColor" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</div>
